
@inject Microsoft.AspNetCore.Identity.SignInManager<ApplicationUser> _signInManager


@if (_signInManager.IsSignedIn(User))
{
    <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
        <ul class="navbar-nav flex-grow-1 ">
            <li class="nav-item mx-lg-1">
                <a class="nav-link text-light" asp-area="" asp-controller="BookEvent" asp-action="Index">My events</a>
            </li>
            <li class="nav-item mx-lg-1">
                <a class="nav-link text-light" asp-area="" asp-controller="EventInvite" asp-action="Index" asp-route-id=@User.FindFirst("UserEmail").Value>Events invited to</a>
            </li>
            <li class="nav-item mx-lg-1">
                <a class="nav-link text-light" asp-area="" asp-controller="BookEvent" asp-action="Create">Create event</a>
            </li>

            @if (User.IsInRole("Admin"))
            {

                <li class="nav-item mx-lg-1 ">
                    <a class="nav-link text-light" asp-area="" asp-controller="AdminPanel" asp-action="Index">All Events</a>
                </li>
            }
        </ul>
    </div>

    <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
        <ul class="navbar-nav ">
            <li class="nav-item dropdown mx-lg-1">
                <a class="nav-link dropdown-toggle text-light" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-expanded="false">
                    Hello @User.FindFirst("UserFullName").Value
                </a>

                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                    <a class="dropdown-item text-dark" asp-action="Logout" asp-controller="RegisterUser">Logout</a>
                </div>
            </li>
        </ul>
    </div>

}
else
{
    <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
        <ul class="navbar-nav flex-grow-1">
            <li class="nav-item ">
                <a class="btn btn-outline-light mx-3" asp-area="" asp-controller="RegisterUser" asp-action="Login">Login</a>
            </li>
            <li class="nav-item">
                <a class="btn btn-outline-light" asp-area="" asp-controller="RegisterUser" asp-action="SignUp">SignUp</a>
            </li>
        </ul>
    </div>

}
